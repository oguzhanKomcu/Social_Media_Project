@model List<FavoritePostVM>
@{
    ViewData["Title"] = "FavoritePosts";
}

<form id="allPosts" novalidate class="needs-validation">

    <div class="col-sm-6">
        <div class="row">
            <div class="card-header">
                <h4>Post List</h4>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var item in Model)
                        {
                       

                            <tr>
                                <td id="postId">@item.Id</td>
                                <td>@item.Description</td>
                                <td>@item.Post_Scores</td>
                                <td>@item.Total_Comment</td>
                                 <td>@item.CreateDate</td>                                

                                
                                <td>
                                    <img src="@item.ImagePath" width="100" height="100">
                                </td>
                                
                                <td>
                                    <img src="@item.UserImagePath" width="100" height="100">
                                </td>
                           
                                <td>
                                    <a asp-controller="User" asp-action="Details" asp-route-id="@item.User_Id">@item.UserName</a>

                                </td>

                                <td>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Delete</a>
                                </td>
                                


                            </tr>

                           


                        }




                    </tbody>

                </table>
            </div>
            <div class="card-footer">
                <a asp-action="Create" class="btn btn-primary">Create New One</a>
            </div>
        </div>
    </div>



</form>

