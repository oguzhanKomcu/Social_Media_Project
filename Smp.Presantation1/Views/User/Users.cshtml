@model List<GetAppUserVM>
@{
    ViewData["Title"] = "Users";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h4>User List</h4>
        </div>
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>User Name</th>
                        <th>Image</th>
                        <th>User SCORE</th>
                   
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserName</td>
                            <td>@item.ImagePath</td>
                            <td>@item.User_Score</td>
                            <td>
                                <a asp-action="Follow" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Follow</a>
                            </td> 
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Details</a>
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </div>
</div>

