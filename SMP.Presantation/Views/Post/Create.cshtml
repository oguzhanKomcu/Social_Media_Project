@model CreatePostDTO
@{
    ViewData["Title"] = "Create";
}



<div class="col-sm-6">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">
                Create Page
            </h4>
        </div>
       <div class="card-body">
           <form asp-action="Create">
               <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               <div class="form-group">
                   <label asp-for="UploadPath"></label>
                   <input asp-for="UploadPath" class="form-control" placeholder="UploadPath" />
               </div>
               <div class="form-group">
                   <label asp-for="Description"></label>
                   <input asp-for="Description" class="form-control" placeholder="Description" />
               </div>
               <div class="form-group">
                   <input type="submit" class="btn btn-primary btn-sm" value="Submit" />
               </div>
           </form>
       </div>
       <div class="card-body">
           <a asp-action="List" class="btn btn-dark btn-sm">Back to List</a>
       </div>
    </div>
</div>